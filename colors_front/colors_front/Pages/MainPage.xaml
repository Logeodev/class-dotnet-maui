<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="colors_front.Pages.MainPage"
             xmlns:viewmodels="clr-namespace:colors_front.ViewModels"
             xmlns:models="clr-namespace:colors_front.Models"
             Title="Palettes">

    <Grid RowDefinitions="Auto,*" Padding="10">
        <Label Text="Palettes de couleurs" 
               HorizontalOptions="Center"
               FontSize="24"
               FontAttributes="Bold"
               Margin="0,10,0,20" />

        <RefreshView Grid.Row="1" 
                    Command="{Binding RefreshCommand}" 
                    IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding ColorPalettes}">
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="Aucune palette disponible" 
                               FontSize="18" 
                               HorizontalTextAlignment="Center" />
                        <Label Text="Tirez vers le bas pour actualiser" 
                               FontSize="14" 
                               HorizontalTextAlignment="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ColorPalette">
                        <Frame Margin="10" Padding="15" BorderColor="LightGray">
                            <StackLayout Spacing="15">
                                <Label Text="Palette de couleurs" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" />

                                <CollectionView ItemsSource="{Binding Palette}">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:Color">
                                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="5">
                                                <Border BackgroundColor="{Binding MauiColor}"
                                                       WidthRequest="40" 
                                                       HeightRequest="50"
                                                       StrokeShape="RoundRectangle 5,5,5,5" />

                                                <StackLayout Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center">
                                                    <Label Text="{Binding TypeName}" FontAttributes="Bold" />
                                                    <Label Text="{Binding HexValue}" FontSize="12" TextColor="Gray" />
                                                </StackLayout>

                                                <Label Grid.Column="2" 
                                                      Text="{Binding Red, StringFormat='R:{0}'}" 
                                                      VerticalOptions="Start" />
                                                <Label Grid.Column="3"
                                                    Text="{Binding Green, StringFormat='G:{0}'}"
                                                    VerticalOptions="Center" />
                                                <Label Grid.Column="4"
                                                       Text="{Binding Blue, StringFormat='B:{0}'}"
                                                       VerticalOptions="End" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

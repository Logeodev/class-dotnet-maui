<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ColorManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ColorManager"
    Shell.FlyoutBehavior="Flyout"
    Title="ColorManager">

    <ShellContent
        Title="Colors"
        ContentTemplate="{DataTemplate local:ColorsPage}"
        Route="Colors" />

    <ShellContent
        Title="Color Details"
        ContentTemplate="{DataTemplate local:ColorDetailPage}"
        Route="Details" />

</Shell>

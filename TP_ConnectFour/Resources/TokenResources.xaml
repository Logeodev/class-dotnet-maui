<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:converters="clr-namespace:TP_ConnectFour.Converters">

    <converters:TokenColorConverter x:Key="TokenColorConverter" />

    <Style x:Key="TokenBorderStyle" TargetType="Border">
        <Setter Property="StrokeShape" Value="Ellipse" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="#1A1A1A" />
        <Setter Property="WidthRequest" Value="45" />
        <Setter Property="HeightRequest" Value="45" />
        <Setter Property="Margin" Value="2" />
    </Style>
</ResourceDictionary>

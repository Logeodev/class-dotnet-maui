<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleMAUI.TicTacToe">

    <StackLayout>
        
        <Grid Padding="10" MinimumHeightRequest="500" MaximumWidthRequest="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="Button00" Grid.Row="0" Grid.Column="0" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button01" Grid.Row="0" Grid.Column="1" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button02" Grid.Row="0" Grid.Column="2" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button10" Grid.Row="1" Grid.Column="0" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button11" Grid.Row="1" Grid.Column="1" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button12" Grid.Row="1" Grid.Column="2" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button20" Grid.Row="2" Grid.Column="0" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button21" Grid.Row="2" Grid.Column="1" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
            <Button x:Name="Button22" Grid.Row="2" Grid.Column="2" Clicked="OnButtonClicked" Margin="10" FontSize="80"/>
        
        </Grid>
        <Button Text="Reset board"
                Clicked="ResetGame" 
                Margin="30"/>
        <Button Text="Back Home"
                Clicked="OnBackClicked"
                Margin="10" />
    </StackLayout>
</ContentPage>